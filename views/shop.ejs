<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Shop</title>
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon"/>
  <link rel="stylesheet" href="/css/bootstrap/bootstrap.min.css" />
  <link rel="stylesheet" href="/css/style.css"/>
  <script defer src="/js/bootstrap/bootstrap.bundle.min.js"></script>
</head>
<body>
  <header class="sticky-top bg-danger py-2">
    <div class="container">
      <nav>
        <ul class="nav">
          <li class="nav-item">
            <a href="/" class="nav-link text-white">Shop</a>
          </li>
          <li class="nav-item">
            <a href="/admin/add-product" class="nav-link text-white">Add Product</a>
          </li>
        </ul>
      </nav>
    </div>
  </header>

  <main class="py-4">
    <div class="container">
      <div class="row">
        <%
        if (prods.length > 0) {
          %>
          <% prods.forEach(function(product) { %>
            <div class="col-lg-3 col-md-4 col-sm-6 col-12">
              <div class="card rounded">
                <img src="https://images.unsplash.com/photo-1505740420928-5e560c06d30e?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8M3x8cHJvZHVjdHxlbnwwfHwwfHx8MA%3D%3D" alt="product-thumbnail" class="img-fluid card-img-top rounded-top">
                <div class="card-body">
                  <hgroup>
                    <h5 class="card-title">#{product.title}</h5>
                    <h6>#{product.price}</h6>
                  </hgroup>
                  <p class="card-text text-truncate">#{product.description}</p>
                  <button class="btn btn-outline-primary w-100 rounded-pill">Add to Cart</button>
                </div>
              </div>
            </div>
          <% }); %>
          <%
        } else {
          %>
          <div class="col-lg-3 col-md-5 mx-md-auto col-12">
            <div class="d-flex flex-column gap-2 text-center pt-5">
              <figure class="emptythumb">
                <img src="/images/no-data.svg" alt="empty-product-thumb" class="img-fluid">
              </figure>
              <h5 class="card-title">No Products!</h5>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </main>

</body>
</html>